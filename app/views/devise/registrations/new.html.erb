<div class="container pt">
  <div class="row mt">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h3>SIGN UP to T.T.M.S.</h3>
      <hr>
      <p>Sign up to Tender Tracking Management System and be part of us..</p>
    </div>
  </div>

  <div class="row mt">  
    <div class="col-lg-8 col-lg-offset-2">  

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:role=>"form"}) do |f| %>
        <%= devise_error_messages! %>        

        <div class="form-group">
          <%= f.label :role %>      
          <br>
          <%= f.radio_button :role, User::ROLE[1], :checked => true %> 
          <%= label_tag "I Want to Apply for the tender." %>
          <br>        
          <%= f.radio_button :role, User::ROLE[2] %> 
          <%= label_tag "I am seeking applicants for my project." %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, :class=>"form-control", autofocus: true, :placeholder => "Enter your email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, :class=>"form-control", autocomplete: "off", :placeholder => "Enter password"%>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :class=>"form-control", autocomplete: "off", :placeholder => "Re Enter above password" %>
        </div>

        <div class="form-group"> 
          <%= label_tag "Name" %><br>  
          <%= f.text_field :first_name, :class=>"form-control half-width inline", :placeholder => "First Name" %>           
          <%= f.text_field :last_name, :class=>"form-control half-width inline pull-right", :placeholder => "Last Name" %>
        </div>

        <div class="form-group"> 
          <%= f.label :address %><br />
          <%= f.text_area :address, :class => "form-control", :placeholder => "Addresss" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Something about yourself" %>  
        </div>

        <div class="form-group">
          <%= label_tag "Contact Number" %>
          <%= f.text_field :contact, :class => "form-control half-width", :placeholder => "Contact Number (Mobile/Office)" %>  
        </div>

        <div class="form-group">
          <%= f.label :website %>
          <%= f.text_field :website, :class => "form-control", :placeholder => "Your website for reference" %>        
        </div>

        <div class="actions pull-right">
          <%= f.submit "Sign up", :class => "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
