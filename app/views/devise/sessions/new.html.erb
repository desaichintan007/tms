<div class="container pt">
  <div class="row mt">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h3>LOG IN to T.T.M.S.</h3>
      <hr>
      <p>Please login to go to dashboard and apply to any tender.</p>
    </div>
  </div>

  <div class="row mt">  
    <div class="col-lg-8 col-lg-offset-2">  

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:role=>"form"}) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, :class=>"form-control", autofocus: true, :placeholder => "Enter your email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, :class=>"form-control", autocomplete: "off", :placeholder => "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions pull-right">
          <%= f.submit "Log in", :class => "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>