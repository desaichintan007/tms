<div class="container pt">
  <div class="row mt">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h3>Forgot your password ???</h3>
      <hr>
      <p>Do not rememebr your password ?? Give us your Email ID, we will verify it and send a link to create new password..!!</p>
    </div>
  </div>

	<div class="row mt">  
    <div class="col-lg-8 col-lg-offset-2">  

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { :role=>"form",method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, :class=>"form-control", autofocus: true, :placeholder => "Please give your Email." %>
			  </div>

			  <div class="actions pull-right">
			    <%= f.submit "Send me reset password instructions", :class => "btn btn-success" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
