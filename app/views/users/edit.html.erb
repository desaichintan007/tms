<div class="container pt">
  <div class="row">
    <div class="centered">
      <h3>Edit Profile</h3>
    </div>
  </div>


  <div class="row mt">  
    <div class="col-lg-8 col-lg-offset-2">  

      <%= form_for @user, method: :put do |f| %>

        <div class="form-group"> 
          <%= label_tag "Name" %><br>  
          <%= f.text_field :first_name, :class=>"form-control half-width inline", :placeholder => "First Name" %>           
          <%= f.text_field :last_name, :class=>"form-control half-width inline pull-right", :placeholder => "Last Name" %>
        </div>

        <div class="form-group"> 
          <%= f.label :address %><br />
          <%= f.text_area :address, :class => "form-control", :placeholder => "Addresss" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Something about yourself" %>  
        </div>

        <div class="form-group">
          <%= label_tag "Contact Number" %>
          <%= f.text_field :contact, :class => "form-control half-width", :placeholder => "Contact Number (Mobile/Office)" %>  
        </div>

        <div class="form-group">
          <%= f.label :website %>
          <%= f.text_field :website, :class => "form-control", :placeholder => "Your website for reference" %>        
        </div>

        <div class="actions pull-right">
          <%= f.submit "Update", :class => "btn btn-success" %>
        </div>
      <% end %>

      <!-- <h3>Cancel my account</h3> -->

      <!-- <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->

      <%= link_to "Back", :back %><br>
      <%= link_to "Change Password", edit_user_registration_path %>

    </div>
  </div>  

</div>