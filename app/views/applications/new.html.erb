<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 centered">
      <h5>Apply to</h5><h3>'<%= @tender.title %>'</h3>
      <hr>
      <p><%= @tender.description.html_safe %></p>
    </div>
  </div>

  <div class="row mt">  
    <div class="col-lg-8 col-lg-offset-2">  

      <%= form_for @application do |f| %>

        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :tender_id %>

        <div class="form-group">
          <%= f.label :cover %><br />
          <%= f.text_area :cover, :class=>"form-control", autofocus: true, :placeholder => "Enter Cover to your application for #{@tender.title}.", :presence => true %>
        </div>

        <div class="form-group">
          <%= f.label :proposal %><br />
          <%= f.cktext_area :proposal, :class=>"form-control", :placeholder => "Enter Details of your proposal for #{@tender.title}.", :presence => true %>
        </div>

        <div class="form-group">
          <%= f.label :estimated_budget %>
          <em> (in Rs.)</em><br />
          <%= f.text_field :estimated_budget, :class=>"form-control", :placeholder => "Your estimated   budget for #{@tender.title}.", :presence => true %>
        </div>

        <div class="form-group">
          <%= label_tag "estimated_time_duration" %>
          <em> (You should specify hours / days / months into time duration)</em><br />
          <%= f.text_field :estimated_time, :class=>"form-control", :placeholder => "Your estimated   budget for #{@tender.title}.", :presence => true %>
        </div>

        <div class="actions pull-right">
          <%= f.submit "Submit Application", :class => "btn btn-success" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
